package main

import (
	"fmt"
	"regexp"
)

var (
	re       = regexp.MustCompile(`\$\{.*\}`)
	yamlFile = `
apiVersion: apps/v1
kind: Deployment
metadata:
  name: ${spec.name}-deployment
spec:
  replicas: ${spec.replicas}
  selector:
    matchLabels:
	  app: ${resource-1.name}-app
  containers:
  - name: ${resource-1.containerName}
`
)

func main() {
	ss := re.FindAllString(yamlFile, -1)
	fmt.Println(ss)
}
